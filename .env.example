# --- Shared Configuration ---
DATABASE_URL=postgres://schoolerp:password@localhost:5432/schoolerp?sslmode=disable
REDIS_URL=redis://localhost:6379
ENV=development # production, staging

# --- API Service ---
API_PORT=8080
# Preferred (supports rotation): comma-separated, first secret/key is active.
JWT_SECRETS=
DATA_ENCRYPTION_KEYS=

# Legacy single-secret fallbacks (used when the corresponding *_SECRETS / *_KEYS is empty).
JWT_SECRET=your-very-secret-key-123
DATA_ENCRYPTION_KEY=change-me-32-char-encryption-key
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
PUBLIC_DEFAULT_TENANT_ID=
PUBLIC_FORM_CAPTCHA_REQUIRED=false

# --- Worker Service ---
WORKER_HEALTH_PORT=8081

# --- Storage (MinIO/S3) ---
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=schoolerp-files
STORAGE_USE_SSL=false

# --- Online Payments (Razorpay) ---
RAZORPAY_KEY_ID=rzp_test_XXXXXXXXXXXX
RAZORPAY_KEY_SECRET=XXXXXXXXXXXXXXXXXXXXXXXX
RAZORPAY_WEBHOOK_SECRET=XXXXXXXXXXXXXXXXXXXXXXXX

# --- Frontend (Next.js) ---
NEXT_PUBLIC_API_URL=http://localhost:8080/v1
NEXT_PUBLIC_RAZORPAY_KEY=rzp_test_XXXXXXXXXXXX
NEXT_PUBLIC_DEFAULT_TENANT_ID=

# --- SMS Gateway (Twilio) ---
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_FROM_NUMBER=+15551234567

# --- WhatsApp (Twilio WhatsApp) ---
WHATSAPP_FROM_NUMBER=whatsapp:+14155238886

# --- Email (SMTP) ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=yourschool@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourschool.edu

# --- Google OAuth (for parent/teacher login) ---
GOOGLE_CLIENT_ID=xxxxxxxxxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-XXXXXXXXXXXXXXXXXXXXXXXXXXXX

# --- Bus GPS Tracking (Traccar) ---
GPS_TRACKER_URL=http://localhost:8082
GPS_TRACKER_API_KEY=your_traccar_api_key

# --- Push Notifications (Firebase Cloud Messaging) ---
FCM_SERVER_KEY=AAAA_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
FCM_PROJECT_ID=your-firebase-project-id

